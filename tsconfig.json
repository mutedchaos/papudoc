{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "target": "es2017",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react",
    "outDir": "dist",
    "lib": [
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "skipLibCheck": true,
    "incremental": true
  },
  "include": [
    "src/**/*"
  ]
}