{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "target": "es2017",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "lib": [
      "es2016",
      "es2017"
    ],
    "module": "commonjs"
  },
  "include": [
    "src/**/*"
  ],
  "incremental": true
}
